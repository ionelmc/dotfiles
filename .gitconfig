[color]
	branch = auto
	diff = auto
	status = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red
	new = cyan

[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[alias]
	st = status
#	lg = log --all --date-order --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	lg = log --date-order --color --graph --pretty=format:'%Cred%h%Creset %C(black bold)%cd %Creset%C(bold)-%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=short
	lga = log --all --date-order --color --graph --pretty=format:'%Cred%h%Creset %C(black bold)%cd %Creset%C(bold)-%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=short
#	co = !git checkout $([ -z "$1" ] && (git branch -a | sed s/remotes\\\\/origin\\\\/// | sed 's/* //' | sed 's/ //g' | grep -v HEAD | sort | uniq | fzf --preview 'git log {} --'))
#	co = !git checkout $([ -z "$1" ] && (git branch -a | sed s/remotes\\\\/// | sed 's/  //g' | sort | uniq | fzf --preview 'git show {}'))
#	co = !git checkout $([ -z "$1" ] && (git branch -a | python -c 'import sys; print(\'\\n\'.join(i.replace(\'remotes/\',\'\').strip() for i in sys.stdin.readlines()))' | sort | uniq | fzf ))
	co = !~/.fzf.git.co-action $([ -z "$1" ] && (git branch -a | ~/.fzf.git.co-query | fzf --with-nth=2 --delimiter=, --preview '~/.fzf.git.co-preview {1} {3}'))
	td = !git tag -d $(git tag | fzf)
	bd = !git branch -d $(git branch | fzf)
	bD = !git branch -D $(git branch | fzf)
	cp = cherry-pick
	new = "!upstream=$(git rev-parse --abbrev-ref --symbolic-full-name @{u}); branch=$(git rev-parse --abbrev-ref --symbolic-full-name @); git push origin HEAD:$1 && git checkout $1 && git branch -f $branch $upstream && echo Done: "
	k = !gitk --all --date-order $1 &
	g = !git gui &

[core]
	autocrlf = input
	pager = less -F -X -R
	editor = micro
[push]
	default = tracking
[merge]
	renamelimit = 1000000
